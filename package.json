{
  "name": "electron-react-app",
  "productName": "Electron React Semantic UI App",
  "description": "Boiler-Plate for an Electron React Semantic UI App",
  "version": "0.1.0",
  "private": true,
  "author": "1-14x0r<kara@openmastery.org",
  "copyright": "Â© 2017, OpenMastery.org",
  "license": "MIT",
  "homepage": "./",
  "main": "src/electron-starter.js",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "prod": "build --em.main=build/electron.js",
    "release": "build --em.main=build/electron.js --publish=always",
    "preprod": "npm run build",
    "prerelease": "npm run build"
  },
  "build": {
    "appId": "com.electron.electron-react-semantic-ui",
    "asar": false,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.13.3",
    "foreman": "^2.0.0",
    "react-app-rewired": "^1.5.2",
    "react-scripts": "1.1.4",
    "prettier": "^1.10.2",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "cross-env": "^5.1.3",
    "mobx": "^4.2.1",
    "mobx-react": "^5.1.2",
    "node-notifier": "^5.2.1",
    "react": "^16.3.2",
    "react-app-rewire-mobx": "^1.0.8",
    "react-burger-menu": "^2.4.4",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-css": "^2.3.1",
    "semantic-ui-react": "^0.80.0"
  }
}
